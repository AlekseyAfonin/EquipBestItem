<Brushes>
    <Brush Name="EquipBestItem.SlotButton">
        <Layers>
            <BrushLayer Name="Default" Sprite="equipbestitem_button_equip"/>
        </Layers>
        <Styles>
            <Style Name="Default">
                <BrushLayer Name="Default" Sprite="equipbestitem_button_equip" ColorFactor="0.7"
                            IsHidden="false"/>
            </Style>
            <Style Name="Hovered">
                <BrushLayer Name="Default" Sprite="equipbestitem_button_equip" ColorFactor="1.5"
                            IsHidden="false"/>
            </Style>
            <Style Name="Pressed">
                <BrushLayer Name="Default" Sprite="equipbestitem_button_equip" ColorFactor="2"
                            IsHidden="false"/>
            </Style>
            <Style Name="Disabled">
                <BrushLayer Name="Default" Sprite="equipbestitem_button_equip" ColorFactor="0.1" IsHidden="true"/>
            </Style>
        </Styles>
        <SoundProperties>
            <EventSounds>
                <EventSound EventName="Click" Audio="popup"/>
            </EventSounds>
        </SoundProperties>
    </Brush>
